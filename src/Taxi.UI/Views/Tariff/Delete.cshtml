@model Taxi.UI.Models.Tariffs.TariffViewModel;

@{
	ViewData["Title"] = "Удаление тарифа";
}

<ul class="list-group w-50">
	<li class="list-group-item">
		<b>Название: </b> @Model.Name
	</li>
	<li class="list-group-item" style="word-break: break-all;">
		<b>Описание: </b>
		@Model.Description
	</li>
	<li class="list-group-item">
		<b>Цена: </b>@Model.Price
	</li>
</ul>

<form method="post">
	<input type="submit" class="btn btn-danger mt-5" asp-action="DeleteTariff" asp-route-id="@Model.Id" value="Удалить" />
</form>
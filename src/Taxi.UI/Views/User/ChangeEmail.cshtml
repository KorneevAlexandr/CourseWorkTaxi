@model Taxi.UI.Models.Users.ChangeEmailViewModel;

@{
	ViewData["Title"] = "Изменение Email для пользователя " + User.Identity.Name;
}

<form asp-action="ChangeEmail" asp-controller="User">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group w-25">
		<label asp-for="NewEmail" class="control-label">Новый email</label>
		<input type="email" asp-for="NewEmail" class="form-control" />
	</div>
	<div class="form-group w-25">
		<label asp-for="Password" class="control-label">Введите пароль</label>
		<input type="password" asp-for="Password" class="form-control" />
	</div>
	<div class="form-group">
		<input type="submit" value="Изменить" class="btn btn-primary" />
	</div>
</form>


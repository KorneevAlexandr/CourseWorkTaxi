@model Taxi.UI.Models.Users.ChangeEmailViewModel;

@{
	ViewData["Title"] = "Изменение email";
}

<h2>Изменение email для пользователя @User.Identity.Name</h2>
<form asp-action="ChangeEmail" asp-controller="User">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group">
		<label asp-for="NewEmail" class="control-label">Новый email</label>
		<input type="email" asp-for="NewEmail" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Password" class="control-label">Введите пароль</label>
		<input type="password" asp-for="Password" class="form-control" />
	</div>
	<div class="form-group">
		<input type="submit" value="Сохранить" class="btn btn-default" />
	</div>
</form>


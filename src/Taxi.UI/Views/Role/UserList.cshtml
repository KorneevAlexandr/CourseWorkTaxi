@model IEnumerable<Taxi.UI.Data.User>

<h2>Список пользователей</h2>
<table class="table">
	@foreach (var user in Model)
	{
	<tr>
		<td>@user.Email</td>
		<td>
			<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
		</td>
		<td>
			<form method="post">
				<input type="submit" class="btn btn-sm btn-primary" asp-controller="Role" asp-action="DeleteUser" asp-route-userid="@user.Id" value="Удалить" />
			</form>
		</td>
	</tr>
	}
</table>
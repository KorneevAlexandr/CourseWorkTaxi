@model Taxi.UI.Models.Calls.CallAddressCollectionViewModel;

@{
	ViewData["Title"] = "Популярные адреса вызовов по месяцам за " + @DateTime.Now.Year.ToString() + " год";
}

<table class="table table-striped">
	<tr>
		<th>Месяц</th>
		<th>Начальный адрес</th>
		<th>Количество вызовов</th>
		<th>Конечный адрес</th>
		<th>Количество вызовов</th>
	</tr>


	@for (int i = 0; i < Model.StartAddresses.Count; i++)
	{
		<tr>
			<td style="text-transform: capitalize">@Model.StartAddresses[i].Month</td>
			<td>@Model.StartAddresses[i].Address</td>
			<td>@Model.StartAddresses[i].CountAddresses</td>

			<td>@Model.EndAddresses[i].Address</td>
			<td>@Model.EndAddresses[i].CountAddresses</td>	
		</tr>
	}
</table>
 
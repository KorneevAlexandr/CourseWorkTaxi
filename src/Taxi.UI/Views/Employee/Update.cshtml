@using Taxi.UI.Models; 

@model Taxi.UI.Models.Employees.EmployeeViewModel;

@{
	ViewData["Title"] = "Редактирование сотрудника";
}

<form asp-action="Update" asp-controller="Employee" method="post">
	<input style="display:none" type="number" name="Id" value="@Model.Id" />

	<div class="form-row">
		<div class="form-group w-25">
			<label>Имя</label>
			<input type="text" required maxlength="30" pattern="^[а-яА-Я, a-zA-Z]+$" class="form-control" name="Name" value="@Model.Name" />
		</div>
		<div class="form-group w-25 ml-2">
			<label>Фамилия</label>
			<input type="text" required maxlength="30" pattern="^[а-яА-Я, a-zA-Z]+$" class="form-control" name="Surname" value="@Model.Surname" />
		</div>
	</div>

	<div class="form-row mt-2">
		<div class="form-group w-25">
			<label>Должность</label>
			<select asp-for="PositionId" class="form-control" asp-items="@(
				new SelectList(Model.Positions, "Id", "Name", Model.Positions.FirstOrDefault(x => x.Id == Model.PositionId)))"></select>
		</div>
		<div class="form-group w-25 ml-2">
			<label>Дата принятия на работу</label>
			<input type="date" class="form-control" name="DateStartOfWork" required min="@DateTimeExtensions.MinDate" 
				   max="@DateTimeExtensions.MaxDate" value="@Model.DateStartOfWork.GetHtmlInputFormat()"/>
		</div>
	</div>

	<input type="submit" class="btn btn-primary mt-4" value="Изменить" />

</form>

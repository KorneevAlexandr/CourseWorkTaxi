@using Taxi.UI.Models;

@model Taxi.UI.Models.Employees.EmployeeViewModel;

@{
	ViewData["Title"] = "Добавление сотрудников";
}

<form asp-action="Create" asp-controller="Employee" method="post">

	<div class="form-row">
		<div class="form-group w-25">
			<label>Имя</label>
			<input type="text" required pattern="^[а-яА-Я, a-zA-Z]+$" maxlength="30" class="form-control" name="Name" />
		</div>
		<div class="form-group w-25 ml-2">
			<label>Фамилия</label>
			<input type="text" required maxlength="30" pattern="^[а-яА-Я, a-zA-Z]+$" class="form-control" name="Surname" />
		</div>
	</div>

	<div class="form-row mt-2">
		<div class="form-group w-25">
			<label>Должность</label>
			<select asp-for="PositionId" class="form-control" asp-items="@(new SelectList(Model.Positions, "Id", "Name"))"></select>
		</div>
		<div class="form-group w-25 ml-2">
			<label>Дата принятия на работу</label>
			<input type="date" class="form-control" required min="@DateTimeExtensions.MinDate"
				   max="@DateTimeExtensions.MaxDate" name="DateStartOfWork" />
		</div>
	</div>

	<input type="submit" class="btn btn-success mt-4" value="Создать" />

</form>

@model Taxi.UI.Models.Employees.EmployeeCollectionViewModel;

@{
	ViewData["Title"] = "Сотрудники";
}

<a asp-action="Create" class="btn btn-success">Создать сотрудника</a>

<form asp-action="Index" class="mt-4" asp-controller="Employee" method="get">
	<div class="form-row float-left">
		<div class="form-group w-50">
			<label>Должность</label>
			@if (Model.SelectedPositionId != 0)
			{
				<select asp-for="SelectedPositionId" class="form-control" name="positionId" asp-items="@(new SelectList(
				Model.Positions, "Id", "Name",
				Model.Positions.FirstOrDefault(x => x.Id == Model.SelectedPositionId).Name))"></select>
			}
			else
			{
				<select asp-for="SelectedPositionId" class="form-control" name="positionId" asp-items="@(new SelectList(Model.Positions, "Id", "Name"))"></select>
			}

		</div>
		<div class="form-group ml-2 w-25">
			<label>Стаж от (лет)</label>
			<input type="number" name="yearStanding" class="form-control" asp-for="YearStanding" value="@Model.YearStanding" />
		</div>

		<div class="float-left ml-3 mt-4">
			<label></label>
			<input type="submit" class="form-control btn btn-info" value="Найти" />
		</div>
	</div>

	<table class="table table-striped">
		<tr>
			<th>Имя</th>
			<th>Фамилия</th>
			<th>Принятие на работу</th>
			<th>Должность</th>
			<th>Действия</th>
		</tr>

		@foreach (var item in Model.Employees)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Surname</td>
				<td>@item.DateStartOfWork.ToShortDateString()</td>
				<td>@item.PositionName</td>
				<td>
					<a asp-action="Update" class="btn btn-primary opacity-90" asp-route-id="@item.Id">
						Изменить
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
							<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
							<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
						</svg>
					</a>
					<a asp-action="Delete" class="btn btn-danger opacity-90" asp-route-id="@item.Id">
						Удалить
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
							<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
							<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
						</svg>
					</a>
					@if (!item.Registered)
					{
						<a asp-controller="Account" asp-action="Register" class="btn btn-warning ml-3" asp-route-id="@item.Id">
							Зарегистрировать
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
								<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
								<path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
							</svg>
						</a>
					}
					else
					{
						<button class="btn btn-secondary ml-3" disabled>
							Зарегистрирован
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
							<path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
							<path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
						</svg>
						</button>
					}

				</td>
			</tr>
		}

	</table>

	<pagination count-pages="Model.CountPages" name="page" asp-action="Index" asp-controller="Employee" current-page="Model.CurrentPage"></pagination>

</form>


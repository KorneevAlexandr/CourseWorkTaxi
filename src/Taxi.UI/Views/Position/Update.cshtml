@model Taxi.UI.Models.Positions.PositionViewModel;

@{
	ViewData["Title"] = "Изменение должности";
}

<form action="Update" method="post">
	<input style="display:none" type="number" name="Id" value="@Model.Id" />

	<div class="form-group w-25">
		<label>Название</label>
		<input type="text" class="form-control" required maxlength="40" name="Name" value="@Model.Name" />
	</div>
	<div class="form-group w-25">
		<label>Описание</label>
		<textarea name="Description" class="form-control"  style="resize: none;" rows="5" cols="40" required maxlength="100">@Model.Description</textarea>
	</div>
		<input type="submit" class="btn btn-primary" value="Изменить" />
</form>
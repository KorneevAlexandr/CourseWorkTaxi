@model Taxi.UI.Models.Positions.PositionViewModel;

@{
	ViewData["Title"] = "Создание должности";
}

<form action="Create" method="post">
	<div class="form-group w-25">
		<label>Название</label>
		<input type="text" class="form-control" required maxlength="40" name="Name" />
	</div>
	<div class="form-group w-25">
		<label>Описание</label>
		<textarea name="Description" rows="5" cols="40"  style="resize: none;" class="form-control" required maxlength="100"></textarea>
	</div>
		<input type="submit" class="btn btn-success" value="Создать" />
</form>
